rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===== DEVELOPMENT MODE: RELAXED SECURITY RULES =====
    // WARNING: These rules are for development only!
    // DO NOT use in production - they allow broad access
    
    // Allow all authenticated users to read/write everything
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Alternative: Allow all access (even unauthenticated) - VERY UNSAFE
    // Uncomment the line below if you want to allow completely open access
    // allow read, write: if true;
  }
}
