# Production Environment Variables Template
# Copy this file to .env.local for development or configure these in your deployment platform
# NEVER commit actual secrets to version control

# =============================================================================
# FIREBASE CONFIGURATION (REQUIRED)
# =============================================================================
# Get these from your Firebase project console
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# =============================================================================
# APPLICATION CONFIGURATION (REQUIRED)
# =============================================================================
# Your application URL (used for redirects and email templates)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Environment (production, staging, development)
NODE_ENV=production

# =============================================================================
# CLOUDINARY CONFIGURATION (REQUIRED FOR IMAGE UPLOADS)
# =============================================================================
# Get these from your Cloudinary dashboard
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =============================================================================
# EMAIL CONFIGURATION (REQUIRED FOR NOTIFICATIONS)
# =============================================================================
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your App Name

# =============================================================================
# WEBHOOK CONFIGURATION (OPTIONAL)
# =============================================================================
# Make.com webhook for automation (optional)
NEXT_PUBLIC_MAKE_WEBHOOK_URL=your_make_webhook_url

# =============================================================================
# PUSH NOTIFICATIONS (OPTIONAL)
# =============================================================================
# OneSignal configuration for push notifications
NEXT_PUBLIC_ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# =============================================================================
# SECURITY SETTINGS (PRODUCTION)
# =============================================================================
# Authentication bypass (NEVER set to true in production)
NEXT_PUBLIC_BYPASS_AUTH=false

# =============================================================================
# AI CONFIGURATION (REQUIRED FOR AI FEATURES)
# =============================================================================
# OpenAI API key for AI Property Management Agent
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# GOOGLE MAPS CONFIGURATION (OPTIONAL FOR MAP FEATURES)
# =============================================================================
# Google Maps API key for location services, maps, and address autocomplete
# Required APIs: Maps Embed API, Maps Static API, Places API
# Get your API key from: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =============================================================================
# BOOKING SYNC CONFIGURATION (OPTIONAL)
# =============================================================================
BOOKING_API_KEY=key
